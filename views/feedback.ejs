<%layout("/layout/boilerplate")%>
<body>
    <div class="container mt-5 mb-5">
        <div class="review-box">
            <h2 class="text-center">✨ Your feedback helps us improve! ✨</h2>
            <hr>

            <form action="#" method="POST">
                <table class="table table-bordered text-center">
                    <thead>
                        <tr>
                            <th>Question</th>
                            <th>Very Good</th>
                            <th>Good</th>
                            <th>Fair</th>
                            <th>Poor</th>
                            <th>Very Poor</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% let questions = [
                            "How would you rate your overall travel experience?",
                            "How satisfied were you with the accommodation?",
                            "How would you rate the transport facilities?",
                            "How friendly and helpful were the tour guides?",
                            "How was the food quality during your trip?",
                            "Was the trip cost reasonable?",
                            "How would you rate the cleanliness of tourist attractions?",
                            "Did you feel safe during your trip?"
                        ]; 

                        let names = [
                            "experience", "accommodation", "transport", 
                            "guides", "food", "cost", "cleanliness", "safety"
                        ]; 
                        %>

                        <% for(let i = 0; i < questions.length; i++) { %>
                        <tr>
                            <td><%= questions[i] %></td>
                            <td><input type="radio" name="<%= names[i] %>" value="Very Good" required></td>
                            <td><input type="radio" name="<%= names[i] %>" value="Good"></td>
                            <td><input type="radio" name="<%= names[i] %>" value="Fair"></td>
                            <td><input type="radio" name="<%= names[i] %>" value="Poor"></td>
                            <td><input type="radio" name="<%= names[i] %>" value="Very Poor"></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>

                <div class="mb-3">
                    <label class="form-label">What was your favorite part of the trip?</label>
                    <input type="text" class="form-control" name="favorite" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Any suggestions to improve travel experience?</label>
                    <textarea class="form-control" name="suggestions" rows="3" required></textarea>
                </div>

                <button type="submit" class="btn btn-primary w-100">Submit Review</button>
            </form>
        </div>
    </div>
</body>
